[
  {
    "id": "g2_1",
    "pattern": "S + 比 + N + Adj",
    "explanation": "Сравнение: А более (какой-то), чем В.",
    "examples": [
      {
        "chinese": "他比我高。",
        "pinyin": "Tā bǐ wǒ gāo.",
        "translation": "Он выше меня."
      },
      {
        "chinese": "今天比昨天冷。",
        "pinyin": "Jīntiān bǐ zuótiān lěng.",
        "translation": "Сегодня холоднее, чем вчера."
      },
      {
        "chinese": "这个比那个贵。",
        "pinyin": "Zhège bǐ nàge guì.",
        "translation": "Это дороже, чем то."
      }
    ],
    "level": "2"
  },
  {
    "id": "g2_2",
    "pattern": "S + 没有 + N + Adj",
    "explanation": "Сравнение: А не такой (какой-то), как В.",
    "examples": [
      {
        "chinese": "我没有他高。",
        "pinyin": "Wǒ méiyǒu tā gāo.",
        "translation": "Я не такой высокий, как он."
      },
