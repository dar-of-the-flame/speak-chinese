[
  {
    "id": "g1_1",
    "pattern": "S + 是 + N",
    "explanation": "Глагол-связка «быть». Соединяет подлежащее и именное сказуемое.",
    "examples": [
      {
        "chinese": "我是学生。",
        "pinyin": "Wǒ shì xuésheng.",
        "translation": "Я студент."
      },
      {
        "chinese": "他是老师。",
        "pinyin": "Tā shì lǎoshī.",
        "translation": "Он учитель."
      },
      {
        "chinese": "这是书。",
        "pinyin": "Zhè shì shū.",
        "translation": "Это книга."
      }
    ],
    "level": "1"
  },
  {
    "id": "g1_2",
    "pattern": "S + 很 + Adj",
    "explanation": "Сказуемое, выраженное прилагательным. Прилагательное не требует глагола-связки.",
    "examples": [
      {
        "chinese": "她很高兴。",
        "pinyin": "Tā hěn gāoxìng.",
        "translation": "Она очень рада."
      },
      {
        "chinese": "这本书很好。",
        "pinyin": "Zhè běn shū hěn hǎo.",
        "translation": "Эта книга очень хорошая."
      },
      {
        "chinese": "今天很热。",
        "pinyin": "Jīntiān hěn rè.",
        "translation": "Сегодня очень жарко."
      }
    ],
    "level": "1"
  },
  {
    "id": "g1_3",
    "pattern": "S + 在 + Place",
    "explanation": "Глагол «находиться в/на». Указывает на местоположение.",
    "examples": [
      {
        "chinese": "我在家。",
        "pinyin": "Wǒ zài jiā.",
        "translation": "Я дома."
      },
      {
        "chinese": "他在北京。",
        "pinyin": "Tā zài Běijīng.",
        "translation": "Он в Пекине."
      },
      {
        "chinese": "书在桌子上。",
        "pinyin": "Shū zài zhuōzi shàng.",
        "translation": "Книга на столе."
      }
    ],
    "level": "1"
  },
  {
    "id": "g1_4",
    "pattern": "S + 有 + N",
    "explanation": "Глагол «иметь, обладать», также используется для указания на наличие (есть).",
    "examples": [
      {
        "chinese": "我有一个姐姐。",
        "pinyin": "Wǒ yǒu yí gè jiějie.",
        "translation": "У меня есть старшая сестра."
      },
      {
        "chinese": "他没有钱。",
        "pinyin": "Tā méiyǒu qián.",
        "translation": "У него нет денег."
      },
      {
        "chinese": "学校有很多学生。",
        "pinyin": "Xuéxiào yǒu hěnduō xuésheng.",
        "translation": "В школе много учеников."
      }
    ],
    "level": "1"
  },
  {
    "id": "g1_5",
    "pattern": "S + 没有 + N",
    "explanation": "Отрицательная форма наличия: «не иметь», «нет».",
    "examples": [
      {
        "chinese": "我没有哥哥。",
        "pinyin": "Wǒ méiyǒu gēge.",
        "translation": "У меня нет старшего брата."
      },
      {
        "chinese": "他没有时间。",
        "pinyin": "Tā méiyǒu shíjiān.",
        "translation": "У него нет времени."
      },
      {
        "chinese": "这里没有水。",
        "pinyin": "Zhèlǐ méiyǒu shuǐ.",
        "translation": "Здесь нет воды."
      }
    ],
    "level": "1"
  },
  {
    "id": "g1_6",
    "pattern": "S + 会 + V",
    "explanation": "Модальный глагол «уметь, мочь (научиться)».",
    "examples": [
      {
        "chinese": "我会说汉语。",
        "pinyin": "Wǒ huì shuō Hànyǔ.",
        "translation": "Я умею говорить по-китайски."
      },
      {
        "chinese": "他不会开车。",
